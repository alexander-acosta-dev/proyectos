<odoo>
    <record id="view_discuss_channel_form_inherit_bot_chat" model="ir.ui.view">
        <field name="name">discuss.channel.form.inherit.bot.chat</field>
        <field name="model">discuss.channel</field>
        <field name="inherit_id" ref="mail.discuss_channel_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Bot Config">
                    <group>
                        <field name="uuid"/>
                        <field name="show_uuid" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
