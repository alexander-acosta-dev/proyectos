<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Acción para importar productos -->
        <record id="action_import_products_api" model="ir.actions.server">
            <field name="name">Importar Productos desde API</field>
            <field name="model_id" ref="stock.model_stock_picking_type"/>
            <field name="binding_model_id" ref="stock.model_stock_picking_type"/>
            <field name="state">code</field>
            <field name="code">
                action = model.importar_productos_desde_api()
            </field>
        </record>

        <!-- Menú en Inventario para productos -->
        <menuitem id="menu_import_products_api"
                  name="Importar Productos API"
                  parent="stock.menu_stock_root"
                  action="action_import_products_api"
                  sequence="100"/>
    </data>
</odoo>