<odoo>
    <data>
        <record id="view_product_template_form_inherit_superfamily" model="ir.ui.view">
            <field name="name">product.template.form.inherit.superfamily</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <!-- Cambiar el label de categ_id -->
                <xpath expr="//field[@name='categ_id']" position="attributes">
                    <attribute name="string">Superfamilia</attribute>
                </xpath>
                <!-- Insertamos los campos personalizados justo despuÃ©s -->
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="x_studio_family"/>
                    <field name="x_studio_subfamily"/>
                    <field name="x_studio_stock"/>
                    <field name="x_studio_bodega"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
