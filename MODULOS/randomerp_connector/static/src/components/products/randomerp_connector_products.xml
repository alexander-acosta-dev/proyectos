<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="randomerp_connector.randomerp_connector_products">
        <div class="home d-flex flex-column align-items-center justify-content-center text-center" style="height:100vh;">

            <!-- Ãcono SVG central -->
            <svg xmlns="http://www.w3.org/2000/svg" class="mb-4" style="width:80px; height:80px; color:#6c757d;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M20.25 7.5l-8.25-4.5-8.25 4.5M20.25 7.5v9l-8.25 4.5m8.25-13.5l-8.25 4.5m0 9v-9m0 9l-8.25-4.5v-9m8.25 4.5l-8.25-4.5"/>
            </svg>

            <!-- Checkbox para productos ocultos -->
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" t-model="state.incluir_ocultos" id="incluir_ocultos"/>
                <label class="form-check-label" for="incluir_ocultos">
                    Incluir productos ocultos
                </label>
            </div>

            <!-- Botones -->
            <button class="btn btn-secondary mt-2" t-on-click="importar">
                Importar productos
            </button>

        </div>
    </t>
</templates>
