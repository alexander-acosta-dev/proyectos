<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <template id="template_landing2" name="Landing Agendar — Capitalizarme">
      <html>
        <head>
          <meta charset="utf-8"/>
          <meta name="viewport" content="width=device-width, initial-scale=1"/>
          <title>Agenda tu reunión — Capitalizarme</title>

          <!-- Estilos inspirados en conoce.capitalizarme.com/web-agendar -->
          <style>
            :root{
              --bg:#000000;
              --card:#ffffff;
              --muted:#6b7280;
              --heading:#ffffff;
              --accent:#ff004e; /* botón fucsia */
              --accent-press:#e40046;
              --input:#1f2937;
              --input-border:#e5e7eb;
              --focus:#ff004e;
              --radius:18px;
              --shadow:0 10px 30px rgba(0,0,0,.25);
            }

            html, body { height:100%; margin:0; font-family:Inter, system-ui, -apple-system, "Helvetica Neue", Arial; background:var(--bg); }

            /* Hero de fondo con video/imagen difuminada */
            .hero-wrap{
              position:relative; min-height:100vh; width:100%;
              overflow:hidden; background:#000;
            }
            .hero-media{
              position:absolute; inset:0; width:100%; height:100%; object-fit:cover; filter:brightness(.55);
            }
            .hero-overlay{
              position:absolute; inset:0;
              background:radial-gradient(1200px 600px at 15% 40%, rgba(0,0,0,.0), rgba(0,0,0,.65) 60%),
                         linear-gradient(to right, rgba(0,0,0,.55), rgba(0,0,0,.25), rgba(0,0,0,.65));
            }

            /* Layout */
            .page-grid{
              position:relative; z-index:2;
              max-width:1200px; margin:0 auto; padding:40px 22px;
              display:grid; grid-template-columns: 1.1fr .9fr; gap:34px; align-items:center;
            }
            @media (max-width: 1024px){
              .page-grid{ grid-template-columns: 1fr; gap:20px; padding:28px 18px; }
            }

            /* Columna izquierda (texto) */
            .brand-row{ display:flex; align-items:center; gap:10px; margin-bottom:16px; }
            .brand-bullet{ width:10px; height:10px; border-radius:999px; background:#fff; opacity:.9; }
            .brand-text{ color:#fff; font-weight:700; letter-spacing:.2px; }
            .hero-title{
              font-size:56px; line-height:1.05; font-weight:800; color:var(--heading); margin:6px 0 16px;
            }
            .hero-sub{ color:#e5e7eb; font-size:18px; line-height:1.6; max-width:560px; }
            @media (max-width: 600px){
              .hero-title{ font-size:38px; }
              .hero-sub{ font-size:16px; }
            }

            /* Tarjeta del formulario */
            .form-card{
              width:100%; max-width:520px; background:var(--card);
              border-radius:24px; box-shadow:var(--shadow); padding:26px 24px;
            }
            .form-title{ font-size:22px; font-weight:800; margin:0 0 16px; color:#111; }
            .form-note{ color:var(--muted); font-size:14px; margin:-6px 0 18px; }

            .field{
              position:relative; margin-bottom:14px;
              border:1px solid var(--input-border); border-radius:14px; padding:14px 14px;
              background:#fff;
            }
            .field input{
              width:100%; border:0; outline:0; font-size:16px; background:transparent; color:#111;
            }
            .field:focus-within{ border-color:var(--focus); box-shadow:0 0 0 3px rgba(255,0,78,.12); }

            .helper{ font-size:12px; color:#f43f5e; margin:4px 2px 0; display:none; }

            .btn{
              width:100%; border:0; border-radius:999px; font-weight:800; cursor:pointer;
              padding:14px 18px; font-size:16px; transition:transform .02s ease, background .15s ease;
            }
            .btn-primary{ background:var(--accent); color:#fff; }
            .btn-primary:active{ transform:translateY(1px); background:var(--accent-press); }
            .btn[disabled]{ opacity:.6; cursor:not-allowed; }

            /* Paso 2: opciones tipo botón */
            .option-group{ margin:16px 0 10px; }
            .option-group label{ font-weight:700; color:#111; display:block; margin-bottom:8px; }
            .option-btn{
              display:block; width:100%; text-align:left; padding:12px 14px; margin-bottom:8px;
              border-radius:12px; border:1px solid #e5e7eb; background:#f9fafb; font-weight:600; cursor:pointer;
            }
            .option-btn.selected{ background:#0b3b66; color:#fff; border-color:#0b3b66; }

            /* Aviso bajo inputs, como en el sitio */
            .hint{ font-size:12px; color:#9ca3af; margin:4px 2px 10px; }

            /* Footer mínimo para spacing */
            .footer-space{ height:20px; }

              .popup-confirm {
                position: fixed;
                left: 0; top: 0; width: 100vw; height: 100vh;
                background: rgba(255,255,255,0.87);
                display: flex; align-items: center; justify-content: center;
                z-index: 1001;
              }
              .popup-content {
                background: #fff; border-radius: 18px; box-shadow: 0 4px 18px #178ed222;
                text-align: center; padding: 42px 30px; min-width: 320px; min-height: 240px;
                display: flex; flex-direction: column; justify-content: center; align-items: center;
              }
              .popup-icon {
                font-size: 56px; color: #178ed2; margin-bottom: 22px;
              }
              .popup-title {
                font-size: 2rem; color: #178ed2; font-weight: bold; margin-bottom: 8px;
              }
              .popup-subtitle {
                font-size: 1.07rem; color: #444; margin-bottom: 20px;
              }
              .popup-text {
                font-size: 1rem; color: #888;
              }
          </style>
        </head>

        <body>
          <section class="hero-wrap">
            <img class="hero-media" alt="Capitalizarme background"
                 src="https://conoce.capitalizarme.com/wp-content/uploads/2023/12/header-landing-v30.jpg"/>
            <div class="popup-confirm" id="popupConfirm" style="display:none;">
              <div class="popup-content">
                <div class="popup-icon">
                  &#10003;
                </div>
                <div class="popup-title">Confirmado</div>
                <div class="popup-subtitle">Cita creada exitosamente.</div>
                <div class="popup-text" id="popupRedirectText">Redirigiendo ...</div>
              </div>
            </div>
            <div class="hero-overlay"></div>
            <div class="page-grid">
              <div>
                <div class="brand-row">
                  <span class="brand-bullet"></span>
                  <div class="brand-text">Capitalizarme.com</div>
                </div>
                <h1 class="hero-title">Simplificamos la inversión inmobiliaria</h1>
                <p class="hero-sub">
                  Agenda tu reunión online sin compromisos y descubre en qué te conviene invertir hoy.
                </p>
              </div>
              <div class="form-card" id="form">
                <div class="form-title">¡Hablemos! Agenda tu reunión</div>
                <div class="form-note">Completa tus datos, luego tu perfil y finalmente tu fecha de agendamiento.</div>
                <form id="landingForm">
                  <!-- Paso 1: datos personales -->
                  <div id="step1">
                    <div class="field"><input type="text" name="nombre" placeholder="¿Cómo te llamas?" required="required"/></div>
                    <div class="field"><input type="text" name="apellido" placeholder="¿Cuál es tu apellido?" required="required"/></div>
                    <div class="field"><input type="tel" name="telefono" placeholder="¿Cuál es tu teléfono?" required="required"/></div>
                    <div class="hint">Necesitamos tu teléfono para coordinar la videollamada</div>
                    <div class="field"><input type="email" name="email" placeholder="¿Cuál es tu email?" required="required"/></div>
                    <div class="hint">Necesitamos tu correo electrónico</div>
                    <button type="button" class="btn btn-primary" id="nextBtnStep1">Siguiente</button>
                  </div>
                  <!-- Paso 2: perfil financiero -->
                  <div id="step2" style="display:none;">
                    <div class="option-group">
                      <label>¿Cuál es tu renta líquida? <span class="hint">Hoy, las entidades financieras solicitan para la gestión del crédito hipotecario una renta mínima desde $1.400.000.</span></label>
                      <button type="button" class="option-btn" data-name="renta" data-value="1">Entre $1.000.001 – $1.400.000</button>
                      <button type="button" class="option-btn" data-name="renta" data-value="2">Entre $1.400.001 – $1.800.000</button>
                      <button type="button" class="option-btn" data-name="renta" data-value="3">Más de $1.800.001</button>
                    </div>
                    <div class="option-group">
                      <label>¿Cuál es tu capacidad de ahorro mensual aproximadamente?</label>
                      <button type="button" class="option-btn" data-name="ahorro" data-value="0">No tengo capacidad de ahorro mensual</button>
                      <button type="button" class="option-btn" data-name="ahorro" data-value="100-200">Entre $100.000 – $200.000</button>
                      <button type="button" class="option-btn" data-name="ahorro" data-value="200-400">Entre $200.001 – $400.000</button>
                      <button type="button" class="option-btn" data-name="ahorro" data-value="400">Más de $400.001</button>
                    </div>
                    <div class="option-group">
                      <label>¿Con cuál te identificas más?</label>
                      <button type="button" class="option-btn" data-name="situacion" data-value="corriente-ok">Tengo cuenta corriente y no estoy en DICOM</button>
                      <button type="button" class="option-btn" data-name="situacion" data-value="nocorriente">No tengo cuenta corriente</button>
                      <button type="button" class="option-btn" data-name="situacion" data-value="dicom">Estoy en DICOM</button>
                    </div>
                    <button type="button" class="btn btn-primary" id="nextBtnStep2">Siguiente</button>
                  </div>
                  <!-- Paso 3: seleccionar fecha -->
                  <div id="step3" style="display:none;">
                    <div class="field"><input type="date" name="fecha_agenda" placeholder="Fecha de agendamiento" required="required"/></div>
                    <div class="hint">Selecciona la fecha en la que te gustaría agendar.</div>
                    <button type="submit" class="btn btn-primary" id="submitBtn">Enviar</button>
                  </div>
                </form>
                <div class="footer-space"></div>
              </div>
            </div>
          </section>
          <script type="text/javascript" src="/website_cap_sscl2/static/src/js/landing_form2.js"></script>
        </body>
      </html>
    </template>
  </data>
</odoo>